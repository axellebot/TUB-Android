<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonRounded" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button_rounded</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="bottomSheetRounded">
        <item name="android:background">@drawable/shape_bottom_sheet_top_rounded</item>
        <item name="android:paddingTop">@dimen/default_material_padding_very_small</item>
    </style>

    <style name="bottomSheetSquared">
        <item name="android:background">@drawable/shape_bottom_sheet_squared</item>
    </style>

    <style name="containerRounded">
        <item name="android:background">@drawable/container_rounded</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginTop">@dimen/default_material_fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_material_fab_margin</item>
        <item name="android:layout_marginStart">@dimen/default_material_fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_material_fab_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>