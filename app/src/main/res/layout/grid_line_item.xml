<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/line_grid_item_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/grid_line_item_card"
        android:layout_width="@dimen/line_grid_item_size"
        android:layout_height="@dimen/line_grid_item_size"
        android:layout_gravity="center"
        android:elevation="4dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/grey">

        <TextView
            android:id="@+id/grid_line_item_label"
            android:layout_width="@dimen/line_grid_item_circle_size"
            android:layout_height="@dimen/line_grid_item_circle_size"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="@dimen/line_grid_item_label_size"
            android:elevation="10dp"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>


