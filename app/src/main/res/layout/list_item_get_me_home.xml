<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_get_me_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_item_side_top_bottom_margin"
        android:layout_marginEnd="@dimen/list_item_side_left_right_margin"
        android:layout_marginStart="@dimen/list_item_side_left_right_margin"
        android:layout_marginTop="@dimen/list_item_side_top_bottom_margin"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/list_item_icon_main_size"
            android:layout_height="@dimen/list_item_icon_main_size"
            android:layout_margin="@dimen/list_item_icon_margin"
            android:src="@drawable/ic_home_white_24dp"
            android:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/list_item_tv_margin_left_right"
            android:layout_marginStart="@dimen/list_item_tv_margin_left_right"
            android:layout_weight="2"
            android:text="@string/fragment_info_btn_home_default"
            android:textAlignment="center"
            android:textSize="@dimen/list_item_text_size" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/list_item_get_me_home_icon_more"
            android:layout_width="@dimen/list_item_icon_more_size"
            android:layout_height="@dimen/list_item_icon_more_size"
            android:layout_margin="@dimen/list_item_icon_margin"
            android:clickable="true"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:tint="@color/greyDark" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>