<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_grid_line_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/item_grid_line_card"
        android:layout_width="@dimen/item_grid_line_size"
        android:layout_height="@dimen/item_grid_line_size"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:background="@drawable/ripple"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/item_grid_line_label"
            android:layout_width="@dimen/item_grid_line_circle_size"
            android:layout_height="@dimen/item_grid_line_circle_size"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:elevation="10dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="@dimen/item_grid_line_label_size" />
    </android.support.v7.widget.CardView>
</RelativeLayout>


