<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonRounded" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_button_rounded</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BottomSheetRounded" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@drawable/shape_bottom_sheet_top_rounded</item>
        <item name="android:paddingTop">@dimen/default_material_padding_very_small</item>
    </style>

    <style name="BottomSheetSquared" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@color/colorBottomSheet</item>
    </style>

    <style name="ListWrapperRounded">
        <item name="android:background">@drawable/shape_list_wrapper_rounded</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginTop">@dimen/default_material_fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_material_fab_margin</item>
        <item name="android:layout_marginStart">@dimen/default_material_fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_material_fab_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListHeader">
        <item name="android:background">@color/colorListHeader</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListHeaderTopRounded">
        <item name="android:background">@drawable/shape_list_header_top_rounded</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListHeaderTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="ListHeaderRefreshImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/default_refresh_button_size</item>
        <item name="android:layout_height">@dimen/default_refresh_button_size</item>
        <item name="android:src">@drawable/ic_refresh_white_24dp</item>
        <item name="android:contentDescription">@string/default_retry</item>
    </style>

    <style name="ProgressBar" parent="Widget.MaterialProgressBar.ProgressBar.Large">
        <item name="android:layout_width">@dimen/default_progress_bar_size</item>
        <item name="android:layout_height">@dimen/default_progress_bar_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateDrawable">@drawable/progress</item>
    </style>

    <style name="ListNoContent">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:text">@string/default_no_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>